{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier mot de passe de l'utilisateur <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
	<div class="row">
		{{ form_start(form, {'action' : path('user_password_edit', {'id' : user.id})}) }}
		{{ form_widget(form) }}

		<button type="submit" class="btn btn-success pull-right">Modifier</button>
		{{ form_end(form) }}
	</div>

	<a role="button" class="btn btn-primary" href="{{ path('user_edit', {'id' : user.id})}}">
		Modifier User
	</a>
{% endblock %}