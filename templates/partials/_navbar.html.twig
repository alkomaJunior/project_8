{% set route_name = app.request.attributes.get('_route') %}
<nav class="navbar navbar-light fixed-top navbar-expand-lg" >
	<div class="container navigation-cont">
        <a class="navbar-brand font-weight-bold" href="{{ path('homepage') }}">
            <img src="{{ asset('build/images/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms">
        </a>
        <span class="d-xl-none d-lg-none">To Do List app</span>
        <!-- Button Menu responsive -->
        <button class="mr-3 navbar-toggler" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <i id="menu-icon-mobile" class="glyphicon glyphicon-menu-hamburger"></i>
        </button>
        <!--**** /end Button Menu responsive ****-->

        <!-- Menu links -->
        <div class="ml-5 collapse navbar-collapse" id="navbarSupportedContent">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <ul class="navbar-nav mr-auto h4">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('homepage')}}"><i class="glyphicon glyphicon-home
                        text-secondary nav-deco {% if route_name == "homepage" %}active font-weight-bolder btn-shadow text-success{% endif %}"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-deco {% if route_name matches '/^task.*/'  %}active font-weight-bold btn-shadow text-success{% endif %}" href="{{ path('task_list_all') }}">Tâches</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link nav-deco {% if route_name matches '/^user.*/' %}active font-weight-bold btn-shadow text-success{% endif %}" href="{{ path('user_list') }}">Utilisateurs</a>
                        </li>
                    {% endif %}
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle font-weight-bold {% if route_name == "user_edit" or route_name == "user_password_edit" %}active btn-shadow-light text-success {% endif %}" href="#" id="navbarDropdown" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <img class="avatar" src="{{ asset('build/images/default-avatar.png') }}" alt="{{ app.user.username }}"> {{ app.user.username }}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item {% if route_name == "user_edit" %}active btn-shadow bg-success{% endif %}" href="{{  path('user_edit', {'id' : app.user.id}) }}">Modifier
                                profil</a>
                            <a class="dropdown-item  {% if route_name == "user_password_edit" %}active btn-shadow bg-success{% endif %}" href="{{  path('user_password_edit', {'id' : app.user.id}) }}">Modifier mot de passe</a>
                            <div class="dropdown-divider"></div>

                            <a class="dropdown-item btn-bg-danger" href="{{ path('logout') }}">Se déconnecter</a>
                        </div>
                    </li>
                </ul>
            {% else %}
                <ul class="navbar-nav mr-auto d-none d-lg-block d-xl-block"><li>&nbsp;</li><li>&nbsp;</li></ul>
                <ul class="navbar-nav float-lg-right mr-5">
                    <li class="nav-item">
                        <form action="{{ path('login') }}" method="post">
                            <div class="form-row">
                                <div class="col-lg-4 col-sm-12 mt-lg-0 mt-5">
                                    <input class="form-control" placeholder="Username" type="text" id="username" name="_username"
                                           value="{% if var is defined and var is not null %}last_username {% endif
                                           %}" />
                                </div>
                                <div class="col-lg-4 col-sm-12 mt-lg-0 mt-1">
                                    <input class="form-control" placeholder="Mot de passe" type="password"
                                           id="password" name="_password" />
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                </div>
                                <div class="col-lg-4 col-sm-12 mt-lg-0 mt-3 mb-lg-0 mb-5">
                                        <button class="form-control btn btn-success" type="submit">Se
                                    connecter</button>
                                </div>
                            </div>
                        </form>
                    </li>
                </ul>
            {% endif %}
        </div>
        <!--*** /end Menu links ****-->
	</div>
</nav>